<div class="container">
	<div class="row">
		<div class="col-lg-3"></div>
		<div class="col-lg-6">
		<h2>Editing Book</h2>

		<% if @book.errors.any? %>
		    <div class="error_explanation" >
		      <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
		        <ul>
		          <% @book.errors.full_messages.each do |message| %>
		          <li><%= message %></li>
		          <% end %>
		        </ul>
		    </div>
		  <% end %>
		<div>
		<%= form_for(@book) do |f| %>
		<div class="form-group">
		<label class="control-label" for="usage1input2">Title</label>
				<%= f.text_field :title, class:"form-control input-sm" %>
		</div>
		<div class="form-group">
		<label class="control-label" for="usage1input2">Opinion</label>
			<%= f.text_area :body, class:"form-control input-lg" %>
		</div>
			<%= f.submit "Create Book",class:"btn btn-primary col-lg-12" %>
		<% end %>
		<div class="w-100"></div>
		<p class="col-lg-10">
		<%= link_to "Show", book_path %>
		|
		<%= link_to "Back", books_path %>
		</p>
		</div>

	</div>
  <div class="col-lg-3"></div>
</div>
</div>