<h2>Users Followers</h2>

<% @users.each do |user| %>

  <p><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg",size:'60x60' %>
  </p>
  <p>
  	<%= link_to user.name, user_path(user) %>
  </p>

   <% if current_user != user %>
	   <% if Relationship.find_by(follower_id: current_user.id,followed_id: user.id) %>
		  	<p><%= link_to "フォロー済み", user_relationships_path(user.id), method: :delete %>
		  	</p>
		  <% else %>
		  	<p><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
		  	
	   <% end %>
  <% end %>
<% end %>