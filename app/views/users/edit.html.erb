<h2>User info</h2>

<% if @user.errors.any? %>
    <div class="error_explanation" >
      <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
    </div>
<% end %>

<%= form_for(@user) do |f| %>
	<label>Name<br>
		<%= f.text_field :name %>
	</label>
	<br>
	<label>Image<br>
		<%= f.attachment_field :profile_image %>
	</label>
	<br>
	<label>Introduction<br>
		<%= f.text_area :introduction %>
	</label>
	<br>
	<%= f.submit "Update User" %>
<% end %>

